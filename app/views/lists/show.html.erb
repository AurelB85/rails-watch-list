<h1>Lists</h1>
<div class="container-list">

<% @list.bookmarks.each do |bookmark| %>
  <div class="card">
    <p><%= bookmark.movie.title %></p>
    <p><%= image_tag bookmark.movie.poster_url, class:"img-size" %></p>
    <p><%= bookmark.movie.overview %></p>
    <p><%= "rating : #{bookmark.movie.rating} "%></p>
    <p><%= link_to "Remove", bookmark_path(bookmark) , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
  </div>
<% end %>
</div>
<div class="button d-flex">
<%= link_to "Back Home Page", lists_path, class:"btn btn-light"%>
<%= link_to "Add Movie", new_list_bookmark_path(@list), class:"btn btn-light"%>
</div>
